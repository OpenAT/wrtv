<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="matomo_website_form" model="ir.ui.view">
            <field name="name">matomo_website_form</field>
            <field name="model">website</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="fso_base_website.website_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Matomo">
                        <group>
                            <field name="matomo_site_id"/>
                            <field name="matomo_api_key"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
